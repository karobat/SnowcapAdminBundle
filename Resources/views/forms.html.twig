{% extends 'SnowcapBootstrapBundle::forms.html.twig' %}

{% block field_row %}
{% if attr is not defined %}{% set attr = {} %}{% endif %}
{% if 'fieldset' in types %}
{{ form_widget(form, {'attr': attr}) }}
{% else %}
{{ parent() }}
{% endif %}
{% endblock %}

{% block inline_widget %}
    {% if value is empty %}

    {% endif %}
    {{ block('choice_widget') }}
    <a class="btn btn-small btn-primary" rel="inline" href="{{ path(route, params) }}"><i class="icon-plus icon-white"></i> Add</a>

{% endblock %}

{% block fieldset_widget %}
{% spaceless %}
    <fieldset>
        <legend>{{ legend }}</legend>
        {{ block('field_rows') }}
    </fieldset>
{% endspaceless %}
{% endblock %}
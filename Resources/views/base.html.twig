<!DOCTYPE html>
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<title>{% block title %}Snowcap Admin{% endblock %}</title>
		{% block stylesheets %}
		<link href="{{ asset('/bundles/snowcapadmin/vendors/jquery/ui-lightness/jquery-ui-1.8.16.custom.css') }}" type="text/css" rel="stylesheet" />
		<link href="{{ asset('/bundles/snowcapadmin/screen.css') }}" type="text/css" rel="stylesheet" />
		{% endblock %}
		<link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
	</head>
	<body>
		<header>
			<h1>Snowcap admin</h1>
			<nav>
				{% render('SnowcapAdminBundle:Default:Navigation') %}
			</nav>
		</header>
		<div id="main">
			{% block body %}{% endblock %}
		</div>
		{% block javascripts %}
			<script type="text/javascript" src="/bundles/snowcapadmin/vendors/jquery/jquery-1.7.js"></script>
			<script type="text/javascript" src="/bundles/snowcapadmin/vendors/jquery/jquery-ui-1.8.16.custom.min.js"></script>
			<script type="text/javascript" src="/bundles/snowcapadmin/screen.js"></script>
		{% endblock %}
	</body>
</html>

{% import 'SnowcapAdminBundle:Navigation:macros.html.twig' as macros %}

{# navigation block #}
{% block navigation %}

    <div class="navbar navbar-fixed-top navbar-inverse">
        <div class="navbar-inner">
            <div class="container">

                {# brand block #}
                {% block brand %}
                    <a class="brand" href="{{ path('snowcap_admin_default_index') }}">
                        {{ "project.name"|trans({}, 'SnowcapAdminBundle') }}
                    </a>
                {% endblock brand %}

                {# admins block #}
                {% block admins %}
                    <ul class="nav">
                        {% for admin in admins %}
                            {{ macros.menu_item(admin) }}
                        {% endfor %}
                    </ul>
                {% endblock admins %}

            </div>
        </div>
    </div>

{% endblock navigation %}